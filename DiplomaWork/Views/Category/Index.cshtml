@using DiplomaWork.Data.Models
@model List<Category>

@{
    ViewData["Title"] = "Категории";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    <h1>Категории</h1>

    <p>
        <a asp-action="Create">Добавить</a>
    </p>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Services)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="align-middle">
                        <a asp-controller="Services" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-link">Услуги (@item.Services.Count())</a>|
                        <a asp-controller="Services" asp-action="Create" asp-route-categoryId="@item.Id" class="btn btn-link">Добавить услугу</a>
                    </td>
                    <td>
                        <form asp-action="Delete" method="post">
                            <input type="hidden" name="Id" value="@item.Id" />
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link">Изменить</a>|<button class="btn btn-link" type="submit">Удалить</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
