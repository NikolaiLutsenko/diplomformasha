@using DiplomaWork1.Models.Admin
@model AdminRequestsModel
@{
    ViewData["Title"] = "Все заявки";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Все заявки</h1>
<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Заявки в работе <span class="badge badge-info">@Model.WorkInProgressRequests.Count()</span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="notassigned-requests-tab" data-toggle="tab" href="#notassigned-requests" role="tab" aria-controls="notassigned" aria-selected="false">Заявки без исполнителя <span class="badge badge-danger">@Model.NotAssignedRequests.Count()</span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="completed-requests-tab" data-toggle="tab" href="#returned-requests" role="tab" aria-controls="returned" aria-selected="false">Возвращенные заявки <span class="badge badge-warning">@Model.ReturnedRequests.Count()</span></a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="completed-requests-tab" data-toggle="tab" href="#completed-requests" role="tab" aria-controls="completed" aria-selected="false">Завершенные заявки <span class="badge badge-success">@Model.CompletedRequests.Count()</span></a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <div class="text-center">
            @{ await Html.RenderPartialAsync("_ShowRequestsTable", Model.WorkInProgressRequests); }
        </div>
    </div>
    <div class="tab-pane fade" id="notassigned-requests" role="tabpanel" aria-labelledby="notassigned-requests-tab">
        <div class="text-center">
            @{ await Html.RenderPartialAsync("_ShowRequestsTable", Model.NotAssignedRequests); }
        </div>
    </div>
    <div class="tab-pane fade" id="returned-requests" role="tabpanel" aria-labelledby="returned-requests-tab">
        <div class="text-center">
            @{ await Html.RenderPartialAsync("_ShowRequestsTable", Model.ReturnedRequests); }
        </div>
    </div>
    <div class="tab-pane fade" id="completed-requests" role="tabpanel" aria-labelledby="completed-requests-tab">
        <div class="text-center">
            @{ await Html.RenderPartialAsync("_ShowRequestsTable", Model.CompletedRequests); }
        </div>
    </div>
</div>

